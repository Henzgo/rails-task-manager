<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed? %>
  <i class="fa-solid fa-check"></i>
<% else %>
  <i class="fa-solid fa-x"></i>
<% end %>
<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Delete',
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
<%= link_to 'Edit this task', edit_task_path %>
